<UserControl x:Class="Demo.SplitButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Chapter.Net.WPF.Controls;assembly=Chapter.Net.WPF.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <controls:SplitButton Height="24"
                          Margin="0,0,0,10"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Click="MainClick"
                          Content="Custom Button">
        <controls:SplitButtonItem Click="FirstClick" Content="First" />
        <controls:SplitButtonItem Click="SecondClick" Content="Second" />
        <controls:SplitButtonItem Click="ThirdClick" Content="Third" />
    </controls:SplitButton>

</UserControl>