<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Chapter.Net.WPF.Controls">

    <Style TargetType="{x:Type controls:ChapterNavigationView}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ChapterNavigationView}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition x:Name="extendColumn" Width="0" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <ContentPresenter x:Name="PART_ContentPresenter" Grid.Column="2" />

                        <Border x:Name="sideBar"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Background="AliceBlue" />

                        <ToggleButton x:Name="toggleButton"
                                      Grid.Column="0"
                                      Grid.ColumnSpan="2"
                                      Height="28"
                                      Margin="6"
                                      VerticalAlignment="Top"
                                      IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="DisplayMode" Value="LeftCompact">
                            <Setter TargetName="PART_ContentPresenter" Property="Grid.Column" Value="1" />
                            <Setter TargetName="PART_ContentPresenter" Property="Grid.ColumnSpan" Value="2" />
                            <Setter TargetName="toggleButton" Property="IsChecked" Value="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="DisplayMode" Value="LeftCompact" />
                                <Condition Property="IsDropDownOpen" Value="True" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.EnterActions>
                                <BeginStoryboard Name="PopupSlideIn">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="extendColumn"
                                                         Storyboard.TargetProperty="MinWidth"
                                                         From="0"
                                                         To="210"
                                                         Duration="0:0:0.150" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <RemoveStoryboard BeginStoryboardName="PopupSlideIn" />
                            </MultiTrigger.ExitActions>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="DisplayMode" Value="LeftCompact" />
                                <Condition Property="IsDropDownOpen" Value="False" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.EnterActions>
                                <BeginStoryboard Name="PopupSlideOut">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="extendColumn"
                                                         Storyboard.TargetProperty="MinWidth"
                                                         From="210"
                                                         To="0"
                                                         Duration="0:0:0.150" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <RemoveStoryboard BeginStoryboardName="PopupSlideOut" />
                            </MultiTrigger.ExitActions>
                        </MultiTrigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="DisplayMode" Value="Left" />
                                <Condition Property="IsExpanded" Value="True" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.EnterActions>
                                <BeginStoryboard Name="LeftSlideIn">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="extendColumn"
                                                         Storyboard.TargetProperty="MinWidth"
                                                         From="0"
                                                         To="210"
                                                         Duration="0:0:0.150" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <RemoveStoryboard BeginStoryboardName="LeftSlideIn" />
                            </MultiTrigger.ExitActions>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="DisplayMode" Value="Left" />
                                <Condition Property="IsExpanded" Value="False" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.EnterActions>
                                <BeginStoryboard Name="LeftSlideOut">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="extendColumn"
                                                         Storyboard.TargetProperty="MinWidth"
                                                         From="210"
                                                         To="0"
                                                         Duration="0:0:0.150" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <RemoveStoryboard BeginStoryboardName="LeftSlideOut" />
                            </MultiTrigger.ExitActions>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>