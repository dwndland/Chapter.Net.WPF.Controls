    <Style TargetType="{x:Type controls:ChapterBadge}">
        <Setter Property="Background" Value="Red" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="6,1" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ChapterBadge}">
                    <controls:BadgeShapePresenter Padding="{TemplateBinding Padding}"
                                                  Background="{TemplateBinding Background}"
                                                  CornerRadius="{TemplateBinding CornerRadius}"
                                                  OvalCornerRadius="{TemplateBinding OvalCornerRadius}"
                                                  Shape="{TemplateBinding Shape}">
                        <Grid x:Name="content">
                            <TextBlock x:Name="PART_NumberPresenter"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed" />
                            <ContentPresenter x:Name="contentPresenter" Visibility="Collapsed" />
                        </Grid>
                    </controls:BadgeShapePresenter>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Variant" Value="Block">
                            <Setter Property="Padding" Value="0" />
                            <Setter TargetName="content" Property="Style" Value="{StaticResource BlockStyle}" />
                        </Trigger>
                        <Trigger Property="Variant" Value="Cancel">
                            <Setter Property="Padding" Value="0" />
                            <Setter TargetName="content" Property="Style" Value="{StaticResource CancelStyle}" />
                        </Trigger>
                        <Trigger Property="Variant" Value="Check">
                            <Setter Property="Padding" Value="0" />
                            <Setter TargetName="content" Property="Style" Value="{StaticResource CheckStyle}" />
                        </Trigger>
                        <Trigger Property="Variant" Value="Content">
                            <Setter TargetName="contentPresenter" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="Variant" Value="Minus">
                            <Setter Property="Padding" Value="0" />
                            <Setter TargetName="content" Property="Style" Value="{StaticResource MinusStyle}" />
                        </Trigger>
                        <Trigger Property="Variant" Value="Number">
                            <Setter TargetName="PART_NumberPresenter" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="Variant" Value="Plus">
                            <Setter Property="Padding" Value="0" />
                            <Setter TargetName="content" Property="Style" Value="{StaticResource PlusStyle}" />
                        </Trigger>
                        <Trigger Property="Variant" Value="Time">
                            <Setter Property="Padding" Value="0" />
                            <Setter TargetName="content" Property="Style" Value="{StaticResource TimeStyle}" />
                        </Trigger>
                        <Trigger Property="Variant" Value="Warning">
                            <Setter TargetName="content" Property="Style" Value="{StaticResource WarningStyle}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="HideOnZero" Value="True" />
                    <Condition Property="Number" Value="0" />
                </MultiTrigger.Conditions>
                <Setter Property="Visibility" Value="Collapsed" />
            </MultiTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>