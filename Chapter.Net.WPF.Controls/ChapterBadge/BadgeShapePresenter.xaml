    <Style x:Key="{x:Static controls:BadgeShapePresenter.StyleKey}" TargetType="{x:Type controls:BadgeShapePresenter}">
        <Setter Property="Focusable" Value="False" />
        <Style.Triggers>
            <Trigger Property="Shape" Value="Circle">
                <Setter Property="Template" Value="{StaticResource CircleTemplate}" />
            </Trigger>
            <Trigger Property="Shape" Value="Diamond">
                <Setter Property="Template" Value="{StaticResource DiamondTemplate}" />
            </Trigger>
            <Trigger Property="Shape" Value="Heart">
                <Setter Property="Template" Value="{StaticResource HeartTemplate}" />
            </Trigger>
            <Trigger Property="Shape" Value="None">
                <Setter Property="Template" Value="{StaticResource NoneTemplate}" />
            </Trigger>
            <Trigger Property="Shape" Value="Oval">
                <Setter Property="Template" Value="{StaticResource OvalTemplate}" />
            </Trigger>
            <Trigger Property="Shape" Value="Polygon5">
                <Setter Property="Template" Value="{StaticResource Polygon5Template}" />
            </Trigger>
            <Trigger Property="Shape" Value="Polygon6">
                <Setter Property="Template" Value="{StaticResource Polygon6Template}" />
